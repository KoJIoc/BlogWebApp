@model ClassLibrary.Data.Article.Article

@{
    ViewBag.Title = "Добавление статьи";
}
<form asp-action="CreateArticle" asp-controller="Home">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название статьи</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Текст статьи</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Создать" />
    </div>
</form>

