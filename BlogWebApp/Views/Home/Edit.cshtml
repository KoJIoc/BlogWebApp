@model ClassLibrary.Data.Article.Article
@{
    ViewBag.Title = "Редактирование статьи";
}
<form asp-action="edit" asp-controller="Home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Имя</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Возраст</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" />
    </div>
</form>